{
  "manifest_version": 2,

  "name": "RemoteChromeController",
  "description": "Lets you to controll Google Chrome browser remotely.",
  "version": "0.2",
  "offline_enabled": true,
  "icons": {
    "128": "rcc128.png"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "rccoptions.html"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "http://*/*",
    "https://*/*",
    "https://www.google.com/*",
    "http://www.google.com/*"
  ],
  "browser_action": {
    "default_icon": "rcc.png"
  },
  "background": {
    "page": "rcc.html"
  }
}